@model Itc.Am.Common.ViewModels.UserVm
<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="~/Content/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-timepicker-addon.min.js"></script>

    <link href="~/css/Bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/UserLayout.css" rel="stylesheet" />
    <style type="text/css">
        .worktime:link, .worktime:visited {
            background-color: #f9ecff;
            color: white;
            border: black 2px;
            text-align: center; 
            text-decoration: none;
            display: inline-block;
            width: 130px;
            margin-left: 15px;
            margin-top: 20px;
        }

        .worktime:hover, .worktime:active {
            background-color: green;
        }
    </style>
</head>

<body>
 
    <div class="wrapper">

        <div class="sidebar" data-color="purple" data-image="~/Images/sidebar-5.jpg">
            <img src="~/Images/sidebar-5.jpg" class="sidebar" />



            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="" class="simple-text">
                        User Interface
                    </a>
                </div>

                <div class="top-section">
                    <div class="profile-image">
                        <img src="/Images/profile.png">
                    </div>
                    <h3 class="profile-title">@HttpContext.Current.User.Identity.Name</h3>
                </div>

                <ul class="nav">
                    <li class="active">
                        <a href="@Url.Action("MyProfile", null, new {area = string.Empty, controller = "MyProfile", id = Model.UserId}, Request.Url.Scheme)">
                            My Profile
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default fixed">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">My Profile</a>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse col-md-12">
                       
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a class="worktime" href="@Url.Action("AddAddress", null, new {area = string.Empty, controller = "Address", id = Model.UserId}, Request.Url.Scheme)">
                                    Add Address
                                </a>
                            </li>
                            <li>
                                <a class="worktime" href="@Url.Action("Worktime", null, new {area = string.Empty, controller = "MyProfile", id = Model.UserId}, Request.Url.Scheme)">
                                    Worktime
                                </a>
                            </li>
                            <li>
                                <a class="worktime" href="@Url.Action("MyReport", null, new {area = string.Empty, controller = "MyProfile", id = Model.UserId}, Request.Url.Scheme)">
                                    My Report
                                </a>
                            </li>
                            <li>
                                <a class="worktime" href="@Url.Action("Vacation", null, new {area = string.Empty, controller = "MyProfile", id = Model.UserId}, Request.Url.Scheme)">
                                    Ask Vacation
                                </a>
                            </li>

                            @if (Request.IsAuthenticated)
                            {
                                @*<li>
                                    <p class="text-right currentuser" style="padding-top: 20px; margin-right: 10px;">@HttpContext.Current.User.Identity.Name</p>
                                </li>*@

                                <li class="col-md-2">
                                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new {id = "logOffForm"}))
                                    {
                                        <span class="nav navbar-nav navbar-right" style="margin-right: 20px; margin-left: 20px; padding-top: 20px;">
                                            <input type="submit" id="submit1" value="Logout"/>
                                        </span>
                                    }
                                </li>
                            }
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                @Html.HiddenFor(m => m.UserId)
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <footer class="footer">
                <div class="container-fluid">

                    <p class="copyright" style="text-align: center;">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> Nikola Panev
                    </p>
                </div>
            </footer>

        </div>

    </div>    
    

<!--s-->

<script src="~/js/Bootstrap.js"></script>
<script src="~/js/modernizr-2.6.2.js"></script>
<script src="~/js/respond.js"></script>
<script src="~/js/site.js"></script>
</body>
</html>