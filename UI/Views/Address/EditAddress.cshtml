@using Itc.Am.Common.ViewModels
@model Itc.Am.Common.ViewModels.EditAddressVm

<link href="~/css/AddAddress.css" rel="stylesheet" />



@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="main">

    <div class="main-center main-login">
        <div class="row">
            <h3>Edit</h3>
        </div>
        @using (Html.BeginForm("EditAddress", "Address", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4>User</h4>
            <div class="bodyx" id="form3">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.AddressId)

                
                <div class="form-group">
                    @Html.LabelFor(model => model.AddressFirst, htmlAttributes: new { @class = "col-sm-2 control-label label" })
                    <br />
                    <div class="col-sm-12">
                        <div class="input-group col-sm-12">
                            @Html.TextBoxFor(model => model.AddressFirst, new {@class = "form-control" })
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.AddressSecond, htmlAttributes: new { @class = "col-sm-2 control-label label" })
                    <br />
                    <div class="col-sm-12">
                        <div class="input-group col-sm-12">
                            @Html.TextBoxFor(model => model.AddressSecond, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "col-sm-2 control-label label" })
                    <br />
                    <div class="col-sm-12">
                        <div class="input-group col-sm-12">
                            @Html.TextBoxFor(model => model.City, new {@class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "col-sm-2 control-label label" })
                    <br />
                    <div class="col-sm-12">
                        <div class="input-group col-sm-12">
                            @Html.TextBoxFor(model => model.PostalCode, new {@class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "col-sm-2 control-label label" })
                    <br />
                    <div class="col-sm-12">
                        <div class="input-group col-sm-12">
                            @Html.TextBoxFor(model => model.Country, new {@class = "form-control" })
                        </div>
                    </div>
                </div>

                <div>
                    <input type="submit" value="Save" class="btn btn-default edit-button" />
                    @Html.ActionLink("Back", "AllAddresses")
                </div>

            </div>

            if (TempData["Success"] != null)
            {
                <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            }

        }
    </div>
</div>