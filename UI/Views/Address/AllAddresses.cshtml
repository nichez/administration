@*@using Itc.Am.Common.Models*@
@model Itc.Am.Common.ViewModels.AllAddressVm

    <style>
        .paging-nav {
            text-align: right;
            padding-top: 2px;
        }

            .paging-nav a {
                margin: auto 1px;
                text-decoration: none;
                display: inline-block;
                padding: 1px 7px;
                background: #91b9e6;
                color: white;
                border-radius: 3px;
            }

            .paging-nav .selected-page {
                background: #187ed5;
                font-weight: bold;
            }

        .paging-nav,
        #tableData {
            width: 100%;
            margin: 0 auto;
            font-family: Arial, sans-serif;
        }
    </style>

    @{
        Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    }

<h2>Addresses</h2>
                    <div class="row">
                        <div class="col-sm-12">
                            <div id="users">
                                <table id="tableData" class="table">
                                    <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UsAddresses.UserId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Addr.AddressId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Addr.AddressFirst)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Addr.AddressSecond)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Addr.City)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Addr.PostalCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Addr.Country)
                                        </th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    
                                    @{
                                        var i = 0;
                                        var m = 0;
                                    }

                                    @foreach (var usr in Model.UserAddresses)
                                    {
                                        i = usr.AddressId;

                                        
                                     
                                            foreach (var item in Model.Addresses)
                                            {
                                                m = item.AddressId;

                                                if (i == m)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => usr.UserId)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.AddressId)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.AddressFirst)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.AddressSecond)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.City)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PostalCode)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Country)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("Edit", "EditAddress", new { id = item.AddressId, q = usr.UserId})
                                                        </td>
                                                    </tr>
                                                }

                                                
                                            }

                                        
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

    <script type="text/javascript">
    $(document).ready(function() {
        $('#tableData').paging({limit:10});
    });
    </script>